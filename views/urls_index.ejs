<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/_head %>
  </head>

  <body>

    <div class="container">
      <% include partials/_navbar %>
      <div class="row marketing">
        <div class="col-lg-12">
          <table class="table table-striped table-responsive">
            <tr>
            <th>Long URL</th>
            <th>Short URL</th>
            </tr>
              <% for (var url in urls ) {
                if( urls.hasOwnProperty(url)) {
              %>
            <tr>
            <td><%= urls[url] %></td>
            <td><a target="_blank" href="http://localhost:8080/u/<%= url %>">http://localhost:8080/u/<%= url %></a></td>
          </tr>
           <% }} %>
        </table>
  <form>
    <input type="button" class="btn btn-primary" value="Add New URL" onclick="window.location.href='/urls/new'" />
  </form>
        </div>
      </div>

      <footer class="footer">
        <% include partials/_footer %>
  </head>
      </footer>

    </div> <!-- /container -->


    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="/javascripts/ie10-viewport-bug-workaround.js"></script>
  </body>
</html>