<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/_head %>
  </head>

  <body>

    <div class="container">
      <% include partials/_navbar %>
      <div class="row marketing">
        <div class="col-lg-12">
          <table class="table table-striped table-responsive">
            <tr>
            <th class="col-lg-6">Long URL</th>
            <th class="col-lg-4">Shortened URL</th>
            <th class="col-lg-2 text-center">Options</th>
            </tr>
              <% for (var url in urls ) {
                if( urls.hasOwnProperty(url)) {
              %>
            <tr>
            <td><a data-toggle="tooltip" title="<%= urls[url] %>" target="_blank" href="<%= urls[url] %>"><%= urls[url] %></a></td>
            <td><a target="_blank" href="http://localhost:8080/u/<%= url %>">http://localhost:8080/u/<%= url %></a></td>
            <td class="text-center">
              <a data-toggle="tooltip" title="Delete Link" href="urls/delete/<%= url %>"><span class='glyphicon glyphicon-remove' style="color:red"></span></a>
              <a data-toggle="tooltip" title="Update Link" href="urls/update/<%= url %>"><span class='glyphicon glyphicon-edit' style="color:green"></span></a>
              </td>
          </tr>
           <% }} %>
        </table>
  <form>
    <input type="button" class="btn btn-primary" value="Add New URL" onclick="window.location.href='/urls/new'" />
  </form>
        </div>
      </div>

      <footer class="footer">
        <% include partials/_footer %>
  </head>
      </footer>

    </div> <!-- /container -->

    <script src="/javascripts/navbar.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="/javascripts/ie10-viewport-bug-workaround.js"></script>
  </body>
</html>